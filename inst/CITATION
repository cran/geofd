citHeader("To cite the package geofd in publications use:")

description <- packageDescription("geofd")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", description$Date)

citEntry( entry="phdthesis",
          title = "geofd: a package for prediction for functional data",
          author = personList(as.person("Ramon Giraldo"), 
                              as.person("Pedro Delicado"),
                              as.person("Jorge Mateu")),
          school = "Universitat Politecnica de Catalunya",
          year = year,
          url = "http://code.google.com/p/geofd",
          textVersion =
            paste("Ramon Giraldo, Pedro Delicado and Jorge Mateu (", year,
            "). geofd: a package for prediction for functional data")
)
